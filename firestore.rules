rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Esta regla permite a un usuario leer y escribir cualquier documento 
    // dentro de una subcolección que esté bajo su propio ID de usuario (userId).
    // Por ejemplo: /users/{userId}/gratitudeEntries/{someDocId}
    match /users/{userId}/{documents=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
