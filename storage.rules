rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    function signedIn() {
      return request.auth != null;
    }
    function isOwner(uid) {
      return signedIn() && request.auth.uid == uid;
    }
    // Máx 10 MB por archivo (ajústalo si necesitas más)
    function validSize() {
      return request.resource.size < 10 * 1024 * 1024;
    }
    // Permitimos imágenes y PDFs (ajusta si necesitas otros tipos)
    function validContentType() {
      return request.resource.contentType.matches('image/.*')
             || request.resource.contentType == 'application/pdf';
    }

    // === Archivos públicos de solo lectura ===
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }

    // === Archivos privados por usuario ===
    // Estructura esperada: users/{uid}/...
    match /users/{uid}/{allPaths=**} {
      allow read: if isOwner(uid);
      allow write: if isOwner(uid) && validSize() && validContentType();
    }

    // Bloquea todo lo no definido
    match /{path=**} {
      allow read, write: if false;
    }
  }
}